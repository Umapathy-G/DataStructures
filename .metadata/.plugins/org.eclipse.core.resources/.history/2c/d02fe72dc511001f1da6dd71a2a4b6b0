package com.example._Basic;

public class Main {
	
	public static void sortArrays(int[] arr) {
		for(int i=0;i<arr.length-1;i++) {
			if(arr[i]>arr[i+1]) {
				int temp = arr[i];
				arr[i] = arr[i+1];
				arr[i+1] = temp;
				i = -1;
			}
		}
	}
	
	public static void main(String[] args) {
		int[] numbers = {5,4,3,2,1};
		sortArrays(numbers);
		for(int num: numbers) {
			System.out.println(num);
		}
	}

}
